{
    "version": 2,
    "name": "react-native-one",
    "builds": [
        {
            "src": "packages/components/src/*.tsx",
            "use": "@now/node@canary"
        },
        {
            "src": "packages/web/package.json",
            "use": "@now/next"
        }
    ],
    "build": {
        "env": {
            "SKIP_PREFLIGHT_CHECK": "true"
        }
    },
    "routes": [
        {
          "src": "/(.*)",
          "headers": { "cache-control": "s-maxage=604800" },
          "dest": "/packages/web/$1"
        }
      ]
}